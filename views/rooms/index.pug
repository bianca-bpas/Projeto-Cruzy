include ../layouts/layout
  
  main#single-player-container
    .intro-text
      h2 Suas Salas

    ul
    .room-list
      each room in rooms
        if room.owner == currentUser.username
          li 
            .room
              .card-header
                span.card-tag SOLO
              p.room-name= `${room.name}`
              span.room-theme= `Tema: ${room.theme}`
              form(action=`/play/${room._id}`, method="GET")
                button.btn Entrar
              form(action=`/rooms/${room._id}?_method=DELETE`, method="POST")
                button.btn.btn-danger Delete
      unless rooms.length
        p Não há salas a mostrar
