//=== Layout base para todas as páginas da aplicação ===//
doctype html
html(lang='pt-br')
  head  
    title Cruzy
    // Favicon
    link(rel="icon" type="image/png" href="/stylesheets/images/favicon.png")
    // Bootstrap CSS
    link(crossorigin="anonymous" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH")
    // CSS personalizado da aplicação
    link(rel='stylesheet', href='/stylesheets/style.css')
    // Bootstrap JS
    script(crossorigin="anonymous" src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz")
  body
    // Cabeçalho com logo
    header
      img(src="/stylesheets/images/logo.png", alt="Logo do Cruzy") 
    
    // Barra de navegação
    include ../partials/navbar
    
    // Sistema de mensagens flash
    include ../partials/flash

    // Conteúdo específico de cada página
    block content
