doctype html
html(lang='pt-br')
  head  
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(crossorigin="anonymous" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH")
    script(crossorigin="anonymous" src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz")
  body
    if success
      each message in success
        div(role="alert").alert.alert-success.alert-dismissible.fade.show
          p= message
          button(type="button" data-bs-dismiss="alert" aria-label="Close").btn-close

    if error
      each message in error 
        div(role="alert").alert.alert-danger.alert-dismissible.fade.show
          p= message
          button(type="button" data-bs-dismiss="alert" aria-label="Close").btn-close

    block content
